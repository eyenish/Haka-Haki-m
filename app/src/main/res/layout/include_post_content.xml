<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clipToPadding="false"
    android:scrollbars="vertical"
    android:scrollingCache="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_medium">

            <ImageView
                android:layout_width="@dimen/spacing_xxlarge"
                android:layout_height="@dimen/spacing_xxlarge"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_image"
                android:tint="@color/grey_hard" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/news_header_details_size"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:visibility="visible"
                android:src="@drawable/messi"
                app:layout_collapseMode="parallax" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_middle"
            android:visibility="visible">

            <ImageView
                android:layout_width="@dimen/spacing_mxlarge"
                android:layout_height="@dimen/spacing_mxlarge"
                android:layout_marginRight="@dimen/spacing_medium"
                android:src="@drawable/ic_date"
                android:tint="@color/grey_hard" />

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="16 Mar 2016"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/grey_hard" />

            <TextView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"

                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_hard"
                android:textStyle="bold" />

            <ImageView

                android:layout_width="@dimen/spacing_mxlarge"
                android:layout_height="@dimen/spacing_mxlarge"
                android:layout_marginLeft="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_small"
                app:srcCompat="@drawable/thumb_up"
                android:tint="@color/grey_hard" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey_bg" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/spacing_large"
            android:background="@color/grey_bg" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spacing_large"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large"
            android:text="चीन सरकारलाई उपहार दिने भनिएको एक जोडी गैंडाको"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/overlay_dark"
            android:textStyle="bold" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spacing_large"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large"
            android:text="चीन सरकारलाई उपहार दिने भनिएको एक जोडी गैंडाको अवस्था बुझ्नजोडी गैंडाको अवस्था बुझ्न जोडी गैंडाको बुझ्न दुर्लभ वन्यजन्तु तथा वनस्पतिको व्यापार महासन्धी (साइटिस)  दुर्लभ वन्यजन्तु तथा वनस्पतिको व्यापार महासन्धी
            बुझ्नजोडी गैंडाको अवस्था बुझ्न जोडी गैंडाको अवस्था बुझ्न जोडी गैंडाको अवस्था बुझ्न जोडी गैंडाको अवस्था बुझ्न जोडी गैंडाको अवस्था बुझ्न दुर्लभ वन्यजन्तु तथा वनस्पतिको व्यापार महासन्धी (साइटिस)को टोली बुधबार नेपाल आएको छ"

            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/overlay_dark"
             />




    </LinearLayout>

</android.support.v4.widget.NestedScrollView>